<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:clickable="true"
    android:background="@color/white"
    tools:context=".Account">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical"
            android:padding="20dp">

                <TextView
                    android:id="@+id/nameAccount"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="TextView"
                    android:textSize="30dp"
                    android:textStyle="bold"/>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal">

                        <ImageView
                            android:id="@+id/imageView"
                            android:layout_width="200dp"
                            android:layout_height="match_parent"
                            android:layout_weight="1"

                            app:srcCompat="@drawable/ic_baseline_person"
                            tools:src="@tools:sample/avatars" />

                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="match_parent"
                            android:layout_weight="1"
                            android:orientation="vertical">

                                <LinearLayout
                                    android:layout_width="match_parent"
                                    android:layout_height="wrap_content"
                                    android:orientation="horizontal">

                                        <TextView
                                            android:id="@+id/postNumberAccount"
                                            android:layout_width="75dp"
                                            android:layout_height="75dp"
                                            android:layout_margin="10dp"
                                            android:textSize="39dp"
                                            android:gravity="center"
                                            android:textAlignment="center"
                                            android:layout_weight="1"
                                            android:text="2" />

                                        <TextView
                                            android:id="@+id/followerNumberAccount"
                                            android:layout_width="75dp"
                                            android:layout_height="75dp"
                                            android:layout_margin="10dp"
                                            android:textSize="39dp"
                                            android:gravity="center"
                                            android:textAlignment="center"
                                            android:layout_weight="1"
                                            android:text="80" />

                                        <TextView
                                            android:id="@+id/followingNumberAccount"
                                            android:layout_width="75dp"
                                            android:layout_height="75dp"
                                            android:layout_margin="10dp"
                                            android:textSize="39dp"
                                            android:gravity="center"
                                            android:textAlignment="center"
                                            android:layout_weight="1"
                                            android:text="90" />
                                </LinearLayout>
                                <LinearLayout
                                    android:layout_width="match_parent"
                                    android:layout_height="wrap_content"
                                    android:orientation="horizontal">

                                        <TextView
                                            android:id="@+id/textView6"
                                            android:layout_width="75dp"
                                            android:layout_height="30dp"
                                            android:gravity="center"
                                            android:textAlignment="center"
                                            android:layout_margin="10dp"
                                            android:textStyle="bold"
                                            android:layout_weight="1"
                                            android:text="Posts" />

                                        <TextView
                                            android:id="@+id/textView7"
                                            android:layout_width="75dp"
                                            android:layout_height="30dp"
                                            android:gravity="center"
                                            android:layout_margin="10dp"
                                            android:textAlignment="center"
                                            android:textStyle="bold"
                                            android:layout_weight="1"
                                            android:text="Followers" />

                                        <TextView
                                            android:id="@+id/textView8"
                                            android:layout_width="75dp"
                                            android:layout_height="30dp"
                                            android:gravity="center"
                                            android:textStyle="bold"
                                            android:layout_margin="10dp"
                                            android:textAlignment="center"
                                            android:layout_weight="1"
                                            android:text="Following" />
                                </LinearLayout>
                        </LinearLayout>

                </LinearLayout>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal">

                        <TextView
                            android:id="@+id/textView9"
                            android:layout_marginRight="0dp"
                            android:layout_width="wrap_content"
                            android:layout_height="match_parent"
                            android:textAlignment="center"
                            android:gravity="center"
                            android:textSize="30dp"
                            android:layout_weight="1"
                            android:textStyle="bold"
                            android:text="Posts-" />

                        <Button
                            android:id="@+id/addpostAccountbutton"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginRight="8dp"
                            android:layout_weight="1"
                            android:text="Add" />

                        <Button
                            android:id="@+id/followButton"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_weight="1"
                            android:text="Follow" />

                </LinearLayout>

                <ListView
                    android:id="@+id/postsAccount"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_marginBottom="10dp"
                    />



        </LinearLayout>
</androidx.constraintlayout.widget.ConstraintLayout>
<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".Register">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
        android:padding="10dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent">

        <TextView
            android:id="@+id/registerHeading"
            android:layout_width="match_parent"
            android:layout_height="95dp"
            android:layout_margin="10dp"
            android:gravity="center_horizontal"
            android:text="Register"
            android:textColor="#000"
            android:textStyle="bold"
            android:textAlignment="center"
            android:textSize="50dp" />

        <EditText
            android:id="@+id/emailRegister"
            android:drawableLeft="@drawable/ic_baseline_person_red"
            android:drawablePadding="10dp"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="20dp"
            android:layout_marginTop="10dp"
            android:layout_marginRight="20dp"
            android:backgroundTint="#FF5858"
            android:ems="10"
            android:hint="New Email"
            android:inputType="textEmailAddress" />

        <EditText
            android:id="@+id/passwordRegister"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:drawableLeft="@drawable/ic_baseline_lock_24"
            android:drawablePadding="10dp"
            android:layout_marginLeft="20dp"
            android:layout_marginTop="20dp"
            android:backgroundTint="#FF5858"
            android:layout_marginRight="20dp"
            android:ems="10"
            android:hint="New Password"
            android:inputType="textPassword" />
        <EditText
            android:id="@+id/confirmpasswordRegister"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:drawableLeft="@drawable/ic_baseline_lock_24"
            android:drawablePadding="10dp"
            android:layout_marginLeft="20dp"
            android:backgroundTint="#FF5858"
            android:layout_marginTop="20dp"
            android:layout_marginRight="20dp"
            android:ems="10"
            android:hint="Confirm Password"
            android:inputType="textPassword" />
        <EditText
            android:id="@+id/firstNameRegister"
            android:backgroundTint="#FF5858"
            android:drawableLeft="@drawable/ic_baseline_message_24"
            android:drawablePadding="10dp"
            android:layout_width="match_parent"
            android:layout_marginLeft="20dp"
            android:layout_marginRight="20dp"
            android:layout_height="wrap_content"
            android:layout_marginTop="30dp"
            android:ems="10"
            android:inputType="textPersonName"
            android:hint="First name" />
        <EditText
            android:id="@+id/lastNameRegister"

            android:drawableLeft="@drawable/ic_baseline_message_24"
            android:drawablePadding="10dp"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="20dp"
            android:layout_marginRight="20dp"
            android:layout_marginTop="30dp"
            android:ems="10"
            android:backgroundTint="#FF5858"
            android:inputType="textPersonName"
            android:hint="Last name" />
        <EditText
            android:id="@+id/mobileNoRegister"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="20dp"
            android:layout_marginRight="20dp"
            android:drawableLeft="@drawable/ic_baseline_mobile_screen_share_24"
            android:drawablePadding="10dp"
            android:layout_marginTop="30dp"
            android:ems="10"
            android:backgroundTint="#FF5858"
            android:inputType="textPersonName"
            android:hint="Mobile No" />



        <Button
            android:id="@+id/register"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"

            android:layout_marginLeft="80dp"
            android:layout_marginTop="20dp"
            android:layout_marginRight="80dp"
            android:text="Register" />

        <Button
            android:id="@+id/back"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="20dp"
            android:layout_marginLeft="240dp"

            android:layout_marginRight="10dp"
            android:onClick="BackButton"
            android:text="Back" />
    </LinearLayout>
</androidx.constraintlayout.widget.ConstraintLayout>